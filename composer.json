{
    "name": "user/crm",
    "description": "CRM converted to Laravel scaffold (no vendor included). Run composer install after download.",
    "require": {
        "php": "^8.1",
        "laravel/framework": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\\\": "app/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}